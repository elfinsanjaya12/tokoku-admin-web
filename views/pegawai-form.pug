extends _bootstrap
//- extends layout

block body
  .container
    
    .page-header
      h1 Form Suplier 
    
    form(action="/pegawai/"+data.id method="post")
        <div class="form-group">
            input.form-control(type='text' placeholder='Username' name='username' value=data.username)
        </div>
        <div class="form-group">
            input.form-control(type='text' placeholder='Password' name='password' value=data.password)
        </div>
        <div class="form-group">
            input.form-control(type='email' placeholder='Email' name='email' value=data.email)
        </div>
        <div class="form-group">
            input.form-control(type='text' placeholder='Nama' name='nama' value=data.nama)
        </div>
        <div class="form-group">
            input.form-control(type='text' placeholder='Telepon' name='tlp' value=data.tlp)
        </div>
        <div class="form-group">
            input.form-control(type='text' placeholder='Alamat' name='alamat' value=data.alamat)
        </div>
        <div class="form-group">
            <label for="akses">Akses sebagai :</label>
            select.form-control(name='akses' )
                <option value=0 #{data.akses===0?"selected":""} >Member</option>
                <option value=1 #{data.akses===1?"selected":""} >Master</option>
        </div>

        <button type="submit" class="btn btn-default">Simpan</button>

block scripts 
  script.
