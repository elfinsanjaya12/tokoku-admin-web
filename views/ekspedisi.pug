extends _bootstrap
//- extends layout

block body
  .container
    
    .page-header
      h1 Ekspedisi

    <a class="btn btn-default" href="#" role="button" data-toggle='modal' data-target='#modalFormEks'>Create</a>
    
    <table class="table table-hover">
        <thead>
            <tr>
                <th class="col-md-2">#</th>
                <th>Nama</th>
            </tr>
        </thead>
        <tbody>
            each eks, i in datas
                <tr>
                    <td>
                        a.btn.btn-default(href=`/admin/ekspedisi/edit-`+eks.id role='button' style="border-width:0")
                         span.glyphicon.glyphicon-pencil(aria-hidden='true')
                        a.btn.btn-default(href=`/admin/ekspedisi/del-`+eks.id role='button' style="border-width:0")
                         span.glyphicon.glyphicon-trash(aria-hidden='true')
                    </td>
                    <td> #{eks.nama}</td>
                </tr>
        </tbody>
    </table> 

    

    #modalFormEks.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel')
      .modal-dialog(role='document')
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal', aria-label='Close')
              span(aria-hidden='true') Ã—
            h4#myModalLabel.modal-title Create Ekspedisi
          .modal-body
            <form action="/admin/ekspedisi" method="post">
                <div class="form-group">
                    <label for="exampleInputEmail1"> Nama Ekspedisi </label>
                    input.form-control(type='text' placeholder='ekspedisi' name='nama' value="")
                </div>
          .modal-footer
            button.btn.btn-default(type='button', data-dismiss='modal') Close
            button.btn.btn-primary(type='submit') Save
            </form>

