extends _bootstrap
//- extends layout

block body
  .container
    
    .page-header
      h1 Pegawai 

    <a class="btn btn-default" href="#" role="button" data-toggle='modal' data-target='#modalForm'>Create</a>
    
    <table class="table table-hover">
        <thead>
            <tr>
                <th class="col-md-2">#</th>
                <th>Username</th>
                <th>Password</th>
                <th>Email</th>
                <th>Nama</th>
                <th>Tlp</th>
                <th>Alamat</th>
                <th>Akses</th>
            </tr>
        </thead>
        <tbody>
            each pegawai, i in datas
                <tr>
                    <td>
                        a.btn.btn-default(href=`/admin/pegawai/edit-`+pegawai.id role='button' style="border-width:0")
                         span.glyphicon.glyphicon-pencil(aria-hidden='true')
                        a.btn.btn-default(href=`/admin/pegawai/del-`+pegawai.id role='button' style="border-width:0")
                         span.glyphicon.glyphicon-trash(aria-hidden='true')
                    </td>
                    <td>#{pegawai.username}</td>
                    <td>#{pegawai.password}</td>
                    <td>#{pegawai.email}</td>
                    <td>#{pegawai.nama}</td>
                    <td>#{pegawai.tlp}</td>
                    <td>#{pegawai.alamat}</td>
                    <td>
                        if pegawai.akses==1
                            | Master
                        else
                            | Member
                    </td>
                </tr>
        </tbody>
    </table>


    #modalForm.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel')
      .modal-dialog(role='document')
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal', aria-label='Close')
              span(aria-hidden='true') Ã—
            h4#myModalLabel.modal-title Create Pegawai
          .modal-body
            <form action="/admin/pegawai" method="post">
                <div class="form-group">
                    input.form-control(type='text' placeholder='Username' name='username' value="")
                </div>
                <div class="form-group">
                    input.form-control(type='text' placeholder='Password' name='password' value="")
                </div>
                <div class="form-group">
                    input.form-control(type='email' placeholder='Email' name='email' value="")
                </div>
                <div class="form-group">
                    input.form-control(type='text' placeholder='Nama' name='nama' value="")
                </div>
                <div class="form-group">
                    input.form-control(type='text' placeholder='Telepon' name='tlp' value="")
                </div>
                <div class="form-group">
                    input.form-control(type='text' placeholder='Alamat' name='alamat' value="")
                </div>
                <div class="form-group">
                    <label for="akses">Akses sebagai :</label>
                    <select name="akses" class="form-control">
                        <option value="0">Member</option>
                        <option value="1">Master</option>
                    </select>
                </div>

          .modal-footer
            button.btn.btn-default(type='button', data-dismiss='modal') Close
            button.btn.btn-primary(type='submit') Save
            </form>

