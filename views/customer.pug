extends _bootstrap
//- extends layout

block body
  .container
    
    .page-header
      h1 Customers
    
    <table class="table table-hover">
        <thead>
            <tr>
                <th class="col-md-1">#</th>
                th Username
                <th>Email</th>
                <th>Nama</th>
                <th>Tlp</th>
                <th>Alamat</th>
                <th>Kota</th>
                <th>Provinsi</th>
                <th>Poin</th>
                <th>Foto</th>
            </tr>
        </thead>
        <tbody>
            each cust, i in datas
                <tr>
                    <td>
                        a.btn.btn-default(href=`/admin/customer/del-`+cust.id role='button' style="border-width:0")
                         span.glyphicon.glyphicon-trash(aria-hidden='true')
                    </td>
                    td #{cust.username}
                    <td>#{cust.email}</td>
                    <td>#{cust.nama}</td>
                    <td>#{cust.tlp}</td>
                    <td>#{cust.alamat}</td>
                    <td>#{cust.Kotum.nama}</td>
                    td #{cust.Kotum.Provinsi.nama}
                    td #{cust.poin}
                    td 
                </tr>
        </tbody>
    </table> 

