extends _bootstrap
//- extends layout

block body
  .container
    
    .page-header
      h1 Suplier 

    <a class="btn btn-default" href="#" role="button" data-toggle='modal' data-target='#modalForm'>Create</a>
    
    <table class="table table-hover">
        <thead>
            <tr>
                <th class="col-md-2">#</th>
                <th>Nama</th>
                <th>Alamat</th>
                <th>Telepon</th>
                <th>Keterangan</th>
            </tr>
        </thead>
        <tbody>
            each suplier, i in datas
                <tr>
                    <td>
                        a.btn.btn-default(href=`/suplier/edit-`+suplier.id role='button' style="border-width:0")
                         span.glyphicon.glyphicon-pencil(aria-hidden='true')
                        a.btn.btn-default(href=`/suplier/del-`+suplier.id role='button' style="border-width:0")
                         span.glyphicon.glyphicon-trash(aria-hidden='true')
                    </td>
                    <td>#{suplier.nama}</td>
                    <td>#{suplier.alamat}</td>
                    <td>#{suplier.tlp}</td>
                    <td>#{suplier.keterangan}</td>
                </tr>
        </tbody>
    </table> 

    

    #modalForm.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel')
      .modal-dialog(role='document')
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal', aria-label='Close')
              span(aria-hidden='true') Ã—
            h4#myModalLabel.modal-title Create Suplier
          .modal-body
            <form action="/suplier" method="post">
                <div class="form-group">
                    <label for="exampleInputEmail1"> Nama </label>
                    input.form-control(type='text' placeholder='ekspedisi' name='nama' value="")
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1"> Alamat </label>
                    input.form-control(type='text' placeholder='ekspedisi' name='alamat' value="")
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1"> Telepon </label>
                    input.form-control(type='text' placeholder='ekspedisi' name='tlp' value="")
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1"> Keterangan </label>
                    input.form-control(type='text' placeholder='ekspedisi' name='keterangan' value="")
                </div>
          .modal-footer
            button.btn.btn-default(type='button', data-dismiss='modal') Close
            button.btn.btn-primary(type='submit') Save
            </form>

