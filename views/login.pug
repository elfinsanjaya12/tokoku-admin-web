block body
  .container
    
    .page-header
      h1
        | Login Page
    
    <a class="btn btn-default" href="#" role="button" data-toggle='modal' data-target='#modalLogin'>Login</a>
    if wasLogin 
      <div class="alert alert-warning alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <strong>Data tidak ditemukan. Coba lagi</strong> 
      </div>

    #modalLogin.modal.fade(tabindex='-1', role='dialog', aria-labelledby='modalLogin')
      .modal-dialog(role='document')
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal', aria-label='Close')
              span(aria-hidden='true') Ã—
            h4#myModalLabel.modal-title Silahkan Login
          .modal-body
            <form action="/public/login" method="post">
                <div class="form-group">
                    input.form-control(type='text' placeholder='Username' name='username')
                </div>
                <div class="form-group">
                    input.form-control(type='text' placeholder='Password' name='password')
                </div>
          .modal-footer
            button.btn.btn-default(type='button', data-dismiss='modal') Close
            button.btn.btn-primary(type='submit') Save
            </form>

