block body
  .container
    
    .page-header
      h1 Hai, #{data.nama} .

    //- data profil 
    <div class="list-group">
      <a href="#" class="list-group-item">
        <h4 class="list-group-item-heading">Username</h4>
        <p class="list-group-item-text"> #{data.username} </p>
      </a>
      <a href="#" class="list-group-item">
        <h4 class="list-group-item-heading">Password</h4>
        <p class="list-group-item-text"> #{data.password} </p>
      </a>
      <a href="#" class="list-group-item">
        <h4 class="list-group-item-heading">Email</h4>
        <p class="list-group-item-text"> #{data.email} </p>
      </a>
      <a href="#" class="list-group-item">
        <h4 class="list-group-item-heading">Nama</h4>
        <p class="list-group-item-text"> #{data.nama} </p>
      </a>
      <a href="#" class="list-group-item">
        <h4 class="list-group-item-heading">Tlp.</h4>
        <p class="list-group-item-text"> #{data.tlp} </p>
      </a>
      <a href="#" class="list-group-item">
        <h4 class="list-group-item-heading">Alamat</h4>
        <p class="list-group-item-text"> #{data.alamat} </p>
      </a>
      <a href="#" class="list-group-item">
        <h4 class="list-group-item-heading">Akses</h4>
        <p class="list-group-item-text"> #{data.akses == 1? "Master" : "Member"} </p>
      </a>
    </div>

    <a class="btn btn-default" href="#" role="button" data-toggle='modal' data-target='#modalFormEks'>Edit</a>
    #modalFormEks.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel')
      .modal-dialog(role='document')
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal', aria-label='Close')
              span(aria-hidden='true') Ã—
            h4#myModalLabel.modal-title Create Ekspedisi
          .modal-body
            <form action="/myprofile/update" method="post">
                input.form-control(type='hidden' name='id' value=data.id)
                <div class="form-group">
                    <label for="exampleInputEmail1"> Username </label>
                    input.form-control(type='text' placeholder='ekspedisi' name='username' value=data.username)
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1"> Password </label>
                    input.form-control(type='text' placeholder='ekspedisi' name='password' value=data.password)
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1"> Email </label>
                    input.form-control(type='text' placeholder='ekspedisi' name='email' value=data.email)
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1"> Nama </label>
                    input.form-control(type='text' placeholder='ekspedisi' name='nama' value=data.nama)
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1"> Tlp. </label>
                    input.form-control(type='text' placeholder='ekspedisi' name='tlp' value=data.tlp)
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail1"> Alamat </label>
                    input.form-control(type='text' placeholder='ekspedisi' name='alamat' value=data.alamat)
                </div>

          .modal-footer
            button.btn.btn-default(type='button', data-dismiss='modal') Close
            button.btn.btn-primary(type='submit') Save
            </form>

